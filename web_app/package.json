{
  "name": "boilerplates",
  "version": "1.0.0",
  "description": "Gotta start somewhere...",
  "main": "server.js",
  "scripts": {
    "start": "npm run dev-server",
    "prestart": "npm run clean && npm run html && concurrently \"npm run css\" \"npm run js\"",
    "clean": "rimraf dist",
    "html": "mkdirp dist && npm run html:minify",
    "html:minify": "html-minifier --remove-comments --remove-attribute-quotes --remove-empty-attributes --remove-tag-whitespace src/index.html --output dist/index.html",
    "css": "mkdirp dist/css && npm run css:from-sass",
    "css:from-sass": "node-sass --quiet --output-style compressed src/scss/index.scss dist/css/styles.min.css",
    "js": "mkdirp dist/js && npm run js:bundle",
    "js:bundle": "browserify --transform [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] --entry src/js/index.js | uglifyjs --mangle --compress > dist/js/bundle.min.js",
    "dev-server": "light-server --quiet --serve dist --port 1337 --open --watchexp \"src/** # npm run prestart # reload\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jase-B/boilerplates.git"
  },
  "author": "Jase Balderrama",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jase-B/boilerplates/issues"
  },
  "homepage": "https://github.com/Jase-B/boilerplates#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "html-minifier": "^4.0.0",
    "light-server": "^2.6.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "rimraf": "^2.6.3",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
