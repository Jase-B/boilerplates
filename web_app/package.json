{
  "author": "Jase Balderrama",
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-optional-chaining"
    ],
    "presets": [
      "minify"
    ]
  },
  "bugs": {
    "url": "https://github.com/Jase-B/boilerplates/issues"
  },
  "config": {
    "html_minifier_opts": "--remove-comments --remove-attribute-quotes --remove-empty-attributes --remove-tag-whitespace",
    "port": "1337"
  },
  "description": "Gotta start somewhere...",
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "babel-preset-minify": "^0.5.0",
    "html-minifier": "^4.0.0",
    "light-server": "^2.6.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "rollup": "^1.19.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "homepage": "https://github.com/Jase-B/boilerplates#readme",
  "license": "ISC",
  "main": "app.js",
  "name": "boilerplates",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jase-B/boilerplates.git"
  },
  "scripts": {
    "start": "npm run dev-server",
    "prestart": "npm-run-all clean --parallel build:*",
    "clean": "rimraf dist && mkdirp dist/{css,js}",
    "build:html": "html-minifier $npm_package_config_html_minifier_opts src/index.html --output dist/index.html",
    "build:css": "node-sass --quiet --output-style compressed src/scss/index.scss dist/css/styles.min.css",
    "build:js": "rollup --compact --config --watch",
    "dev-server": "light-server --quiet --serve dist --port $npm_package_config_port --open --watchexp \"src/** # npm run prestart # reload\""
  },
  "version": "1.0.0"
}
